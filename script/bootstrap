#!/usr/bin/env bash

function bootstrap {
  local shome="${_isomorphic_clojurescript_reagent_node_home:-"$(cd -P -- "$(dirname -- "$BASH_SOURCE")/.." && pwd -P)"}"
  source "$shome/script/profile"

  nodeenv --prebuilt --node=4.4.7 "$shome/vendor/nodeenv"
  source "$shome/vendor/nodeenv/bin/activate"
  block compile npm

  lein cljsbuild once server client
}

bootstrap
